@model FleetListPartialModel
@inject UserManager<ApplicationUser> UserManager

<div class="w-64 bg-white border-r overflow-hidden">
    <div class="h-full flex flex-col">
        <div class="p-4">
            <div class="text-sm font-medium text-gray-500 mb-4">Araçlar</div>
            <div class="space-y-1">
                <div class="bg-gray-100 rounded">
                    <button class="w-full flex items-center px-4 py-2 text-sm text-gray-900 hover:bg-gray-200 rounded">
                        <div class="flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-600" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
                            </svg>
                            <span>Tüm Araçlar (@Model.Vehicles?.Count ?? 0)</span>
                        </div>
                    </button>
                </div>

                <div class="pl-6">
                    @if (Model.Vehicles != null)
                    {
                        foreach (var vehicle in Model.Vehicles)
                        {
                            <button class="w-full flex items-center px-4 py-2 text-sm text-gray-600 hover:bg-gray-100 rounded"
                                    data-plaka="@vehicle.Plaka"
                                    data-serial-number="@vehicle.SerialNumber"
                                    data-location="@vehicle.Location"
                                    data-is-online="@vehicle.IsOnline.ToString().ToLower()"
                                    onclick="handleVehicleClick(this)">
                                <div class="flex items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" 
                                         class="h-5 w-5 mr-2 @(vehicle.IsOnline ? "text-green-500" : "text-gray-400")" 
                                         viewBox="0 0 20 20" 
                                         fill="currentColor">
                                        <path d="M8 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM15 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" />
                                        <path d="M3 4a1 1 0 00-1 1v10a1 1 0 001 1h1.05a2.5 2.5 0 014.9 0H10a1 1 0 001-1V5a1 1 0 00-1-1H3zM14 7h-3a1 1 0 00-1 1v6.05A2.5 2.5 0 0115.95 16H17a1 1 0 001-1v-5a3 3 0 00-3-3h-1z" />
                                    </svg>
                                    <span>@vehicle.Plaka / @vehicle.SerialNumber</span>
                                </div>
                            </button>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div> 