    <!-- Help Icon -->
    <button class="w-12 h-12 mb-4 flex items-center justify-center @(currentPath == "/help" ? "text-white" : "text-gray-400") hover:text-white hover:bg-[#68b346] rounded-lg transition-colors @(currentPath == "/help" ? "active-menu-item" : "")">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="@(currentPath == "/help" ? "currentColor" : "#000000")">
