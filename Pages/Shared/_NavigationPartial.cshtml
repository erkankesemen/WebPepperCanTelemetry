@{
    var currentPath = Context.Request.Path.ToString().ToLower();
    currentPath = string.IsNullOrEmpty(currentPath) || currentPath == "/" ? "/dashboard" : currentPath;
}

<div class="fixed left-0 top-[55px] w-16 h-[calc(100vh-64px)] bg-white border-r flex flex-col items-center py-4">
    <!-- Home Icon -->
    <a href="/Dashboard" class="w-12 h-12 mb-4 flex items-center justify-center @(currentPath == "/dashboard" ? "text-white" : "text-gray-400") hover:text-white hover:bg-[#68b346] rounded-lg transition-colors @(currentPath == "/dashboard" ? "active-menu-item" : "")">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="@(currentPath == "/dashboard" ? "currentColor" : "#000000")">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
    </a>

    <!-- Truck/Fleet Icon -->
    <a href="/VehicleDetails" class="w-12 h-12 mb-4 flex items-center justify-center @(currentPath == "/vehicledetails" ? "text-white" : "text-gray-400") hover:text-white hover:bg-[#68b346] rounded-lg transition-colors @(currentPath == "/vehicledetails" ? "active-menu-item" : "")">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="@(currentPath == "/vehicledetails" ? "currentColor" : "#000000")">
            <path d="M8 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM15 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" />
